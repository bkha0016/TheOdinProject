<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>
  <body>
    <h1>New Message</h1>

    <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
    <ul style="color: red">
      <% errors.forEach(error => { %>
      <li><%= error.msg %></li>
      <% }); %>
    </ul>
    <% } %>

    <form action="/new" method="post">
      <input
        type="text"
        name="messageUser"
        placeholder="Your name"
        value="<%= typeof data !== 'undefined' ? data.messageUser : '' %>"
        required
      /><br />
      <textarea name="messageText" placeholder="Your message" required>
<%= typeof data !== 'undefined' ? data.messageText : '' %></textarea
      ><br />
      <button type="submit">Submit</button>
    </form>

    <a href="/">Back to messages</a>
  </body>
</html>
